<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_for_background"
    tools:context=".AuthorizationActivity">

    <LinearLayout
        android:id="@+id/authorization_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="25dp"
        android:paddingEnd="25dp"
        android:gravity="center"
        android:focusableInTouchMode="true"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="left|center"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:text="@string/title_authorization"
                android:textSize="42sp"
                android:textColor="@color/white"
                android:gravity="center"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:text="MANAGE"
                android:textSize="42sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:paddingStart="-9dp"
                />
        </LinearLayout>


        <EditText
            android:id="@+id/field_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Username"
            android:elegantTextHeight="true"
            android:textColor="@color/white"
            android:textColorHint="@color/grey"
            android:backgroundTint="@color/grey"
            android:textSelectHandle="@color/red_company"
            />
        <EditText
            android:id="@+id/field_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Password"
            android:elegantTextHeight="true"
            android:inputType="textPassword"
            android:textColor="@color/white"
            android:textColorHint="@color/grey"
            android:backgroundTint="@color/grey"
            android:textSelectHandle="@color/red_company"
            />
        <Button
            android:id="@+id/button_login"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="150dp"
            android:layout_marginBottom="30dp"
            android:text="Log-in"
            android:textAllCaps="false"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Dont have an account? Register now!"
            android:textAllCaps="false"
            android:textSize="13sp"
            android:textColor="@color/grey"
            android:gravity="center"
            android:background="@drawable/button_outliner"
            />
    </LinearLayout>
</ScrollView>