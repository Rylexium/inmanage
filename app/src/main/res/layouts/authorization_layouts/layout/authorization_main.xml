<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="25dp"
    android:paddingEnd="25dp"
    android:orientation="vertical"
    android:background="@drawable/gradient_for_background"
    android:id="@+id/authorization_layout"
    android:focusableInTouchMode="true"
    tools:context=".authorization.AuthorizationActivity">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="260sp"
        android:orientation="horizontal"
        android:layout_gravity="left|center"
        android:gravity="center"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_authorization"
            android:textSize="42sp"
            android:textColor="@color/white"
            android:gravity="center"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MANAGE"
            android:textSize="42sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:paddingStart="-9dp"
            />
    </LinearLayout>


    <EditText
        android:id="@+id/field_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Username"
        android:elegantTextHeight="true"
        android:textColor="@color/white"
        android:singleLine="true"
        android:maxLength="32"
        android:inputType="text"
        android:textColorHint="@color/grey"
        android:backgroundTint="@color/grey"
        android:textSelectHandle="@color/red_company"
        />
    <EditText
        android:id="@+id/field_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Password"
        android:singleLine="true"
        android:maxLength="32"
        android:elegantTextHeight="true"
        android:inputType="textPassword"
        android:textColor="@color/white"
        android:textColorHint="@color/grey"
        android:backgroundTint="@color/grey"
        android:textSelectHandle="@color/red_company"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:layout_marginTop="90dp"
        >
        <Button
            android:id="@+id/button_login"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginBottom="30dp"
            android:text="Log-in"
            android:textAllCaps="false"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Dont have an account? Register now!"
            android:textAllCaps="false"
            android:textSize="13sp"
            android:textColor="@color/grey"
            android:gravity="center"
            android:background="@drawable/button_outliner"
            android:foreground="?attr/selectableItemBackground"
            />
    </LinearLayout>
</LinearLayout>